<h1><%= @address.id ? 'Edit Address' : 'Create Address' %></h1>
<hr />
<%= form_for [@trip, @location, @address] do |f| %>
  <%= f.label :address %>
  <%= f.text_field :address, required: true, autofocus: true %>
  <%= f.label :city %>
  <%= f.text_field :city, required: true, autofocus: true %>
  <%= f.label :state %>
  <%= f.text_field :state, required: true, autofocus: true %>
  <%= f.label :zip %>
  <%= f.text_field :zip, required: true, autofocus: true %>
  <%= f.submit %>
<% end %>

